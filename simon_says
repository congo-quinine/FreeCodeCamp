function flasher () {

     $(`#number${[i+1]}`).css("background-color", `${flashing[i]}`);

     return myFunction ();

}

$(`button`).one("click", function (){
 return flasher();
});



function myFunction() {
  i++;
  console.log('opo')
    setTimeout(function(){ return flasher(); }, 3000);
